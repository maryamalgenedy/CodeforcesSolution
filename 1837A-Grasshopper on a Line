#include <iostream>
using namespace std;
typedef long long ll;
//typedef vector<int> vi;
//typedef pair<int, int> pi;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    
    int t;
    cin >> t;
    while (t--) {
        int x,k;
        cin >> x >> k;
        if (x % k != 0) {
            cout << 1<<"\n";
            cout << x << "\n";
        }
        else {
            cout << 2 << "\n";
            cout << x-1<<" "<<1<< "\n";
        }
    }
    return 0;
}
