#include <iostream>
#include <string>
using namespace std;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    
    //int n;
    string s;
    cin >> s;
    bool b = true;
    string arr[3] = {"1","14","144"};
    for (int i = 0;i < s.length();) {
        if (i + 2 < s.length() && s.substr(i, 3) == "144") {
                i = i + 3;
        }
        else if (i + 1 < s.length() && s.substr(i, 2) == "14") {
                i = i + 2;
            
        }
        
        else if (s[i] == '1') {
                i++;
            }
        
        else {
            cout << "NO" << "\n";
            b = false;
            break;
        }
    }
    if (b) {
        cout << "YES" << "\n";
    }
    return 0;
}
