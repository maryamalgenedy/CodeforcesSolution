#include <iostream>
using namespace std;
int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    
    int n,m;
    cin >> n >> m;
    int numOfSocks = n;
    int days = 0;

    while (numOfSocks>0) {

        days++;
        numOfSocks--;

        if (days % m == 0) {
            numOfSocks++;
        }
         
    }
    cout << days;
    return 0;
}
