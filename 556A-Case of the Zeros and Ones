#include <iostream>
#include <vector>
#include <string>
#include <algorithm>
#include <cmath>
#include <stack>
using namespace std;
typedef long long ll;
//typedef vector<int> vi;
//typedef pair<int, int> pi;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    
    string t;
    string s;
    cin >> s;

    for (char c : s) {
        t.push_back(c);
        int m = t.size();
        if (m >= 2) {
            if ((t[m - 2] == '0' && t[m - 1] == '1') || (t[m - 2] == '1' && t[m - 1] == '0')) {
                t.pop_back();
                t.pop_back();

            }
            ;
        }
    }
    
    cout << s.length() << "\n";
    return 0;
}
