using namespace std;
#include <iostream>
#include <cctype>
#include <cstring>
#include <cmath>
int main(){
    
    int n;
    cin>>n;

    while (n<9000){
        n++;
        int a=n%10;
        int b=(n/10)%10;
        int c=(n/100)%10;
        int d=(n/1000);

        if(a!=b && b!=c && c!=d && a!=d && c!=d && a!=c){
            cout<<n<<endl;
            break;
        }
    }

}
