#include <iostream>
using namespace std;
int main(){
    
    int n,m,k,c;
    int a=0,b=0;

    cin>>n;
    for (int i=0;i<n;i++){
        cin>>m;
        if(m%2==0) {
            a++;
            c=i+1;
        }
        else{
            b++;
            k=i+1;
        }
      
    }
    
    if (a==1){
        cout<<c<<endl;
    }
    else if(b==1){
        cout<<k<<endl;
    }

   
}



