#include <iostream>
#include <cctype>
#include <cstring>
#include <cmath>
using namespace std;
int main(){
    
    string s1,s2;
    bool c=true;
    cin>>s1>>s2;

    for (int i=0;i<s1.length();i++){
        if (s1.length()!=s2.length()){
            c=false;
            break;
        }
        if (s1[i]!=s2[s1.length()-i-1]){
            c=false;
            break;
        }
    }
    if (c==true){
        cout<<"YES"<<endl;
    }
    else{
        cout<<"NO"<<endl;
    }

    return 0;
}

